atv01
/*aça um algoritmo que leia a idade de uma pessoa expressa em anos, meses e dias e escreva a idade dessa pessoa expressa apenas em dias. Considerar ano com 365 dias e mês com 30 dias.*/ 



import java.util.*;
publico class Idade {
    public static void main(String[]args) {
        int ano,mes,dias, resp;
        Scanner sc = new Scanner(System.in);
        System.out.println("Idade em ano: ");
       ano=sc.nextInt();
       System.out.println("Meses: ");
       mes=sc.nextInt();
      System.out.println("Dias: ");
      dias=sc.nextInt();
      resp= (ano*365) + (mes*30) + dias;
       System.out.println("Sua idade em dias e: "+resp);
    }
}
        
Atv02 
/* Escreva um algoritmo para ler o número total de eleitores de um município, o número de votos brancos, nulos e válidos. Calcular e escrever o percentual que cada um representa em relação ao total de eleitores.
*/

import java.util.*;
public class eleitores {
    public static void main(String[]args) {
    float elei, bran,nulos, vali;
    Scanner sc = new Scanner(System.in);
     System.out.println("Numero de eleitores: ");
    elei=sc.nextInt();
    System.out.println("Votos em branco: ")
    bran=sc.nextInt();
    System.out.println("Votos nulos: ");
    nulos=sc.nextInt();
    System.out.println("Votos validos: ");
    vali=sc.nextInt();
    System.out.println("Percentual de votos brancos: " + bran/elei *100+"%");
    System.out.println("Percentual de votos nulos: " + nulos/elei*100+"%");
    System.out.println("Percentual de votos validos: " + vali/elei*100+"%");
    

Atv03
/*Escreva um algoritmo para ler o salário mensal atual de um funcionário e o percentual de reajuste. Calcular e escrever o valor do novo salário. */

    import java.util.*;
    public class salario {
        public static void main(String[]arg){
            float salario, n;
            Scanner sc = new Scanner(System.in);
            System.out.println("Salario Atual: R$ ");
            salario=sc.nextInt();
            System.out.println("Percentual do reajuste: ");
            n=sc.nextInt();
            System.out.println("Salario reajustado: R$ " + (n/100*salario + salario));
            
            
        }
    }
        
atv04 
/* O custo de um carro novo ao consumidor é a soma do custo de fábrica com a porcentagem do distribuidor e dos impostos (aplicados ao custo de fábrica). Supondo que o percentual do distribuidor seja de 28% e os impostos de 45%, escrever um algoritmo para ler o custo de fábrica de um carro, calcular e escrever o custo final ao consumidor. */

import java.util.*;
public class carro {
    public static void main(String[]arg){
        float custo, impo, distri;
        Scanner sc = new Scanner(System.in);
        System.out.println("Custo: R$");
        custo=sc.nextInt();
        impo = (45*custo/100);
        distri = (28*custo/100);
        System.out.println("Custo total: R$" + (custo+impo+distri));
     
        
    }
}

